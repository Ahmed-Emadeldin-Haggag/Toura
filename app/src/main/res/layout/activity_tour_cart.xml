<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".ToursCartActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/toursCartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tours Cart"
        android:textSize="28sp"
        android:textColor="#4A90E2"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tour 1 - Luxor -->
    <LinearLayout
        android:id="@+id/tour1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/box_border_elegant"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/toursCartTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tour1Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luxor Tour"
            android:textSize="20sp"
            android:textColor="#1976D2"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tour1Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 12/01/2024"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tour1Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visit the magnificent temples of Luxor. A rich cultural experience!"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tour1Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: 1200 EGP"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tour1Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Completed"
            android:textSize="16sp"
            android:textColor="#388E3C"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

    <!-- Tour 2 - Giza Pyramids -->
    <LinearLayout
        android:id="@+id/tour2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/box_border_elegant"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tour1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tour2Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giza Pyramids Tour"
            android:textSize="20sp"
            android:textColor="#0288D1"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tour2Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 15/02/2024"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tour2Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore the ancient wonders of the Giza Pyramids."
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tour2Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: 800 EGP"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tour2Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Completed"
            android:textSize="16sp"
            android:textColor="#388E3C"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

    <!-- Tour 3 - Dahab -->
    <LinearLayout
        android:id="@+id/tour3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/box_border_elegant"
        android:elevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/tour2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tour3Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dahab Beach Tour"
            android:textSize="20sp"
            android:textColor="#0288D1"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tour3Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 20/03/2024"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tour3Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enjoy the serene beaches of Dahab, a perfect getaway."
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tour3Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: 1000 EGP"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tour3Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Pending Payment"
            android:textSize="16sp"
            android:textColor="#FF5722"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
