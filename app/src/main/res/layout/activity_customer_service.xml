<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <!-- Header -->
        <TextView
            android:id="@+id/headerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Customer Service"
            android:textSize="24sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="We're here to assist you and resolve any issues within 24 hours. Please choose the relevant service below."
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center" />

        <!-- Trips Service Box -->
        <LinearLayout
            android:id="@+id/serviceBox1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_rectangle"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trips Inquiries"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For complaints or inquiries regarding trips, contact us at:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/serviceContact1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01062182129"
                android:textSize="16sp"
                android:textColor="#1E88E5"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Hotels Service Box -->
        <LinearLayout
            android:id="@+id/serviceBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_rectangle"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hotels Inquiries"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For complaints or inquiries regarding hotels, contact us at:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/serviceContact2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01029174808"
                android:textSize="16sp"
                android:textColor="#1E88E5"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Technical Issues Box -->
        <LinearLayout
            android:id="@+id/serviceBox3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_rectangle"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Technical Support"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For technical issues, contact us at:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/serviceContact3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01062182230"
                android:textSize="16sp"
                android:textColor="#1E88E5"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Financial Issues Box -->
        <LinearLayout
            android:id="@+id/serviceBox4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_rectangle"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Financial Support"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For financial inquiries, contact us at:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/serviceContact4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01029143219"
                android:textSize="16sp"
                android:textColor="#1E88E5"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
